{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "build",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "src/server.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}